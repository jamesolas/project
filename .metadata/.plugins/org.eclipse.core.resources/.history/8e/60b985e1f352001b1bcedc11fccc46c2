package com.app.service;

import java.time.LocalDateTime;
import java.util.Date;

import com.app.exception.BusinessException;
import com.app.model.Customer;
import com.app.model.CustomerAccount;
import com.app.model.TransactionRequests;

public interface CustomerCrudService {
	
	public Customer createCustomer(String customerFirstName,String customerLastName,String customerEmail,
			String customerPassword) throws BusinessException;
	public Customer deleteCustomer(long customerId) throws BusinessException;
	public CustomerAccount createBalance(long accountBalance) throws BusinessException;
	public CustomerAccount deposit(long accountId, long amount, LocalDateTime date) throws BusinessException;
	public CustomerAccount withdraw(long accountId, long amount, LocalDateTime date) throws BusinessException;
	public TransactionRequests sendMoney(long accountId,long amount, long receivingAccountNumber, LocalDateTime date) throws BusinessException;
	public CustomerAccount receiveMoney(long accountId, long amount, LocalDateTime date) throws BusinessException;
	
}
